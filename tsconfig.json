{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "none",
        "strict": true,
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
		"skipLibCheck": true
    },
    "include": [
        "lib/*.ts",
        "bin/*.ts"
    ],
	"exclude": [
		"node_modules"
	],
    "typeRoots": [
        "./node_modules/@polkadot/ts",
        "./node_modules/@types"
    ]
}
